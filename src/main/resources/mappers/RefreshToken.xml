<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.home.Heo.security.repository.RefreshTokenDao">

    <resultMap id="refreshEntityMap" type="com.ssafy.home.Heo.security.entity.RefreshTokenEntity">
        <id property="id" column="token_id"/>
        <result property="uuid" column="member_uuid"/>
        <result property="token" column="token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByUuid" parameterType="String" resultMap="refreshEntityMap">
        SELECT
        token_id,
        member_uuid,
        token,
        expires_at,
        created_at
        FROM refresh_tokens
        WHERE member_uuid = #{uuid}
    </select>

    <select id="findByToken" parameterType="String" resultMap="refreshEntityMap">
        SELECT
        token_id        AS id,
        member_uuid        AS uuid,
        token,
        expires_at     AS expiresAt,
        created_at     AS createdAt
        FROM refresh_tokens
        where token = #{token}
    </select>

    <delete id="deleteByUuid" parameterType="String">
        delete from refresh_tokens
        where member_uuid = #{uuid}
    </delete>

    <insert id="save" parameterType="com.ssafy.home.Heo.security.entity.RefreshTokenEntity">
        insert into refresh_tokens
        values (id,#{uuid},#{token})
    </insert>

    <insert id="insertRefreshToken" parameterType="map">
        INSERT INTO refresh_tokens (member_uuid, token, expires_at)
        VALUES (#{uuid}, #{refreshToken}, #{expiresAt})
    </insert>
    
    <update id="update" parameterType="com.ssafy.home.Heo.security.entity.RefreshTokenEntity">
        UPDATE refresh_tokens
        SET token = #{token}
        expires_at = #{expiresAt}
        WHERE member_uuid = #{uuid}
    </update>
</mapper>